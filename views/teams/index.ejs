<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/styles.css" rel="stylesheet" type="text/css">
    <title>Teams</title>
</head>
<body>
  <h1>Teams</h1>

    <ul>
      <% teams.forEach((team)=>{
          %>
            <li>
              <a href=<%= team.ID %>>
                <%= team.TeamName %>
              </a> 
                (<%= team.Wins %>-<%= team.Loss %>)
              </li>
          <%
      }) %>
    </ul>

    <button id="button" type="button" onclick="toggleForm()">Add new team</button>

    <div>
      <form id="form" action="/api/teams" method="POST" hidden>
        <fieldset>
          <h3>Create New Team</h3>
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Name"
            required
          />
          <br /><br />
          <input
            type="text"
            id="description"
            name="description"
            placeholder="Description"
            required
          />
          <br /><br />
          <button type="reset">Reset</button>
          <button type="submit">Submit</button>
        </fieldset>
      </form>
    </div>

    <script>
      const form = document.getElementById('form')
      const button = document.getElementById('button')
      console.log(form);
      console.log(button);
      
      function toggleForm() {
        form.toggleAttribute("hidden");
        if (form.hidden) {
          button.innerText = "Add new team"
        } else {
          button.innerText = "Cancel new team"
        }
      }
    </script>

</body>
</html>